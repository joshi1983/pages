	arcRight :arcAngle1 :arcRadius1
	right 17
	arcRight :arcAngle2 :arcRadius2
	right 32
	arcRight 30.3 :size * 0.68
	jumpTo :pos1
	setHeading :oldHeading + 90.9
	arcLeft 2.2 :size * 18.9
	jumpLeft :size * 0.03
	right 1.4

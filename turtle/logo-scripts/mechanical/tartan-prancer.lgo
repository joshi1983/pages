end

to lights :size
	localmake "oldState turtleState
	localmake "oldPos pos
	localmake "oldHeading heading

	; front lights
	jumpForward :size * 0.5
	jumpLeft :size * 1.27
	right 90
	setFillLightGradient :size * 0.16

	jumpTo :oldPos
	setHeading :oldHeading
	jumpForward :size * 0.403
	jumpLeft :size * 1.18

	setPenSize :size * 0.005
	setPenColor "black
	polyStart
	frontLightPath :size 
	polyEnd

	; rear lights
	jumpTo :oldPos
	setHeading :oldHeading
	jumpForward :size * 0.4
	jumpRight :size * 1.27
	left 90
	setFillLightGradient :size * 0.16
	jumpTo :oldPos
	setHeading :oldHeading
	jumpForward :size * 0.43
	jumpRight :size * 1.17

	setPenSize :size * 0.005
	polyStart
	rearLightPath :size
	polyEnd
	setTurtleState :oldState
end

to tartanPrancer :size :rotationAngle
	localmake "oldPos pos
	localmake "wheelRadius :size * 0.175
	jumpTo :oldPos
	jumpForward :size * 0.62
	jumpLeft :size * 0.63
	steeringWheel :size * 0.075
	jumpTo :oldPos
	jumpForward :size * 0.6
	windows :size
	jumpTo :oldPos
	jumpForward :size * 0.17
	bottom :size
	jumpTo :oldPos
	jumpForward :size * 0.18
	siding :size
	jumpTo :oldPos
	jumpLeft :size * 0.903
	jumpForward :size * 0.18
	wheel :wheelRadius :rotationAngle
	jumpTo :oldPos
	jumpForward :size * 0.17
	jumpLeft :size * 1.15
	frontBumper :size * 0.155
	jumpTo :oldPos
	jumpRight :size * 1.115
	jumpForward :size * 0.14
	rearBumper :size * 0.21
	jumpTo :oldPos
	jumpRight :size * 0.62
	jumpForward :size * 0.175
	wheel :wheelRadius :rotationAngle
	jumpTo :oldPos
	jumpForward :size * 0.63
	upperSiding :size
	jumpTo :oldPos
	jumpForward :size * 0.9
	roof :size
	jumpTo :oldPos
	mirrors :size
	doorHandles :size
	doorLines :size
	trunkLine :size
	gasCaps :size
	circleParts :size
	brandLabel :size
	lights :size
end

tartanPrancer 100 1000 * animation.time / animation.duration

to animation.snapshotstyle
	localmake "result createPList
	setProperty "result "zoom.scale 3.3
	setProperty "result "position.y 50
	output :result
end

to animation.setup
	localmake "minutes 0
	localmake "seconds 2
	; Edit this if you want to change the length of your animation.
	output :minutes * 60 + :seconds
end

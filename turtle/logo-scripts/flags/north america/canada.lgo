; Inspired by:
; https://en.wikipedia.org/wiki/Flag_of_Canada#/media/File:Flag_of_Canada_(1964).svg
to georgeStanleyCanadaFlag :height
	localmake "oldState turtleState
	localmake "separation :height * 3 / 2
	localmake "flagRed "#eb0000
	stripes :height * 1.5 :height ["white]
	setFillColor :flagRed
	drawGeorgeStanleyLeaf :height
	jumpLeft :separation / 2
	repeat 2 [
		stripes :height / 2 :height [:flagRed]
		jumpRight :separation
	]

	setTurtleState :oldState
end


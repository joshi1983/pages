; Inspired by flag at:
; https://en.wikipedia.org/wiki/Flag_of_Canada#/media/File:Canada_Pearson_Pennant_1964.svg
to canadaPearsonPennantFlag :height
	localmake "oldState turtleState
	localmake "oldPos pos
	localmake "width :height * 2
	localmake "blueStripWidth :height / 3
	localmake "thickness :height * 0.04
	localmake "leafAngle 60
	stripes :width :height ["white]
	jumpLeft (:width - :blueStripWidth) / 2
	repeat 2 [
		stripes :blueStripWidth :height ["#2163d1]
		jumpRight :width - :blueStripWidth
	]
	jumpTo :oldPos
	setPenColor "red
	setLineCap "butt
	setPenSize :thickness
	jumpForward :height * 0.104
	forward :height * 0.115
	localmake "startPos pos
	left :leafAngle
	repeat 3 [
		forward :height * 0.46
		if repcount = 2 [
			jumpForward :height * 0.008
		]
		canadaPearsonPennantLeaf :height * 0.415
		jumpTo :startPos
		right :leafAngle
	]
	
	setTurtleState :oldState
end


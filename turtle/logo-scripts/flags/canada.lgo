to drawLeaf :height
	localmake "size1 :height * 0.038
	localmake "size2 :height * 0.22
	localmake "size3 :height * 0.225
	localmake "size4 :height * 0.09
	localmake "size5 :height * 0.305
	localmake "size6 :height * 0.064

; made to look like the flag at
; https://upload.wikimedia.org/wikipedia/commons/thumb/9/9a/Flag_of_Bulgaria.svg/1200px-Flag_of_Bulgaria.svg.png

make "colors [ "#fff "#00966e "#d62612 ]
make "width 350
make "thickness :width * 720 / 1200 / count :colors
setScreenColor "grey
setPenSize :width
jumpBackward :thickness * 0.5 * count :colors

repeat count :colors [
	make "c item repcount :colors
	setPenColor :c
	forward :thickness
]
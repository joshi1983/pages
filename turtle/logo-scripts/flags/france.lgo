; Described at
; https://en.wikipedia.org/wiki/Flag_of_France
make "colors ["#0055A4 "#FFFFFF "#EF4135]
right 90
make "height 100
make "width :height * 3 / 2
setScreenColor "gray ; for higher contrast with the colors
setPenSize :height
repeat count :colors [
	setPenColor item repcount :colors
	forward :width / count :colors
]
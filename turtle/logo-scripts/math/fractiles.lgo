to fractile5 :size
	localmake "oldPos pos
	localmake "oldHeading heading
	localmake "tileSize :size * 0.2224
	localmake "angle1 360 / 7
	localmake "angle2 360 / 14
	localmake "angle3 360 / 28
	repeat 7 [
		setPos :oldPos
		setHeading :oldHeading + repcount * :angle1
		redTile :tileSize
		right :angle2
		forward :tileSize
		left :angle2
		yellowTile :tileSize
		forward :tileSize
		right :angle1
		forward :tileSize
		right :angle2 * 3
		blueTile1 :tileSize
		left :angle2 * 2
		forward :tileSize
		right :angle3 * 5
		blueTile2 :tileSize
		left :angle3 * 3
		forward :tileSize
		right :angle2
		yellowTile :tileSize
		forward :tileSize
		right :angle2
		redTile :tileSize
	]
	setPos :oldPos
	setHeading :oldHeading
end

make "size 100
make "sideStepSize :size * 2.2
jumpLeft :sideStepSize * 2
setScreenColor "black
fractile1 :size
jumpRight :sideStepSize

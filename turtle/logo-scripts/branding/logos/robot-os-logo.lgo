to robotOSLogo :height
	localmake "oldState turtleState
	localmake "dotGridHeight :height * 0.84
	localmake "fontHeight :dotGridHeight
	setFillColor "#22314E
	jumpLeft :height * 1.236
	jumpForward (:height - :dotGridHeight) / 2
	drawDotGrid :dotGridHeight
	setLineJoinStyle "round
	jumpRight :height
	drawR :fontHeight
	jumpRight :height * 0.8
	drawO :fontHeight
	jumpRight :height * 0.78
	drawS :fontHeight
	setTurtleState :oldState
end


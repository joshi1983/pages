; https://www.allarvickfund.org
to alcfLogo :height
	localmake "oldState turtleState
	localmake "oldPos pos
	localmake "fontHeight :height * 0.12
	setFillColor "#307e97
	jumpForward :height / 2
	setPenSize 0
	roundRect :height :height :height * 0.07

	jumpTo :oldPos
	jumpRight :height * 0.11
	jumpForward :height * 0.09
	localmake "cPos drawCamera :height * 0.82
	jumpTo :cPos
	jumpBackward :fontHeight / 2
	localmake "cPos pos
	setFillColor "#ecb461
	drawC :fontHeight
	jumpLeft :height * 0.216
	drawL :fontHeight
	jumpLeft :height * 0.207
	drawA :fontHeight
	jumpTo :cPos
	jumpRight :height * 0.225
	drawF :fontHeight

	setTurtleState :oldState
end


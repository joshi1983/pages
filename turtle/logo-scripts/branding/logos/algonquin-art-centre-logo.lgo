; The logo is also shown at:
; https://algonquinartcentre.com
to algonquinArtCentreLogo :height
	localmake "oldState turtleState
	localmake "oldPos pos
	localmake "oldHeading heading
	localmake "thickness :height * 0.108
	localmake "gapThickness :height * 0.055
	jumpRight :height
	localmake "bottomRight pos
	jumpTo :oldPos
	jumpForward :height
	right 180
	drawV :height :thickness "#4d4c4b
	jumpForward :height * 0.324
	drawV :height * 0.383 :thickness "#7a7a7c
	localmake "innerTop pos
	right :angle
	jumpForward :height
	localmake "innerLeft pos

	jumpTo :innerTop
	setHeading :oldHeading + 180 - :angle
	jumpForward distanceToLine :oldPos :bottomRight
	localmake "bottomRight pos
	setFillColor "#b91f24
	setPenSize 0
	polyStart
	jumpBackward :thickness
	right 90 + :angle
	jumpForward (distanceToLine :innerTop :innerLeft) - :thickness
	right 90 + :angle
	jumpForward :gapThickness
	right 90 - :angle
	jumpForward distanceToLine :innerTop :bottomRight 
	left 90 + :angle
	jumpForward :thickness
	left 90 - :angle
	jumpForward distanceToLine :innerTop :innerLeft
	left 90 - :angle
	jumpForward distanceToLine :oldPos :bottomRight
	polyEnd
	setTurtleState :oldState
end


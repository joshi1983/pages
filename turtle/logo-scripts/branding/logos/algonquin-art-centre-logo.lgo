make "angle 27.1

to drawV :height :thickness :color
	localmake "oldState turtleState
	localmake "thicknessFactor :thickness / :height
	localmake "outerLen 1 / cos :angle
	localmake "innerLen :outerLen - :thicknessFactor / sin :angle
	localmake "lines1 [[-:angle 0] [:outerLen] [90 + :angle 0] [:thicknessFactor]
		[90 - :angle 0] [:innerLen] [:angle - 90 0]
		]
	setFillColor :color
	setPenSize 0
	drawArcLineShape [0 0
		combine :lines1 reverse :lines1
	] :height

	setTurtleState :oldState
end

; Inspired by logo at:
; https://www.facebook.com/photo/?fbid=444748427666287&set=a.444748400999623

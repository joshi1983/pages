to drawCameraShutter :radius
	localmake "oldState turtleState
	localmake "oldHeading heading
	localmake "center pos
	localmake "colors [
		"#869bd4 "#ffdf08 "#fda21e "#ef641f
		"#e74f4e "#e15d8c
	]
	setFillColor "lime
	setPenSize 0
	repeat count :colors [
		setHeading :oldHeading - 96 + repcount * 360 / count :colors
		setFillColor item repcount :colors
		jumpForward :radius
		right 90
		polyStart
		arcRight 54.5 :radius
		right 34.5
		arcRight 54 :radius
		right 149.06
		arcLeft 81 :radius
		polyEnd
		jumpTo :center
	]

	setTurtleState :oldState
end


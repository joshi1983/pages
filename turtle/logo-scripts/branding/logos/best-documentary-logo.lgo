to bestDocumentaryLogo :height
	localmake "oldState turtleState
	localmake "oldPos pos
	localmake "oldHeading heading
	localmake "blackRadius :height * 0.285
	localmake "blackArcAngle 316
	setPenSize :height * 0.105
	setPenColor "#333
	jumpForward penSize / 2 + :blackRadius
	localmake "center pos
	drawCameraShutter :height * 0.203
	left 90 + (360 - :blackArcAngle) / 2
	jumpForward :blackRadius
	left 90
	arcLeft :blackArcAngle :blackRadius

	jumpTo :oldPos
	setHeading :oldHeading
	jumpForward :height - penSize / 2
	jumpRight :height * 0.05
	right 130
	localmake "topHeading heading
	repeat 3 [
		localmake "startPos pos
		setHeading :oldHeading + 180
		forward distanceToCircle :center :blackRadius
		jumpTo :startPos
		setHeading :topHeading
		jumpForward :height * 0.153
	]
	setTurtleState :oldState
end


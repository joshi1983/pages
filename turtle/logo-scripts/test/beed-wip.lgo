to ringOfCircles :radius
	localmake "oldState turtleState
	localmake "numCircles round (:radius * pi * 2 / penSize)
	localmake "tinyRadius penSize
	localmake "angleStep 2 * arcTan :tinyRadius / 2 / :radius
	setPenSize 0
	setFillColor penColor
	

	setTurtleState :oldState
end
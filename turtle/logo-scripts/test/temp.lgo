to blueCircleShape1 :size
	localmake "oldPos pos
	localmake "oldHeading heading
	localmake "blueCircleRadius :size * 0.6
	localmake "colorStops plistCreate
	setProperty "colorStops 0 "pink
	setProperty "colorStops 0.2 "pink
	setProperty "colorStops 1 "#984B43
	shadow :size
	setPenSize 0
	setFillGradient createRadialGradient pos pos :size :colorStops "pad
	ellipse :size  * 0.83 :size
	localmake "colorStops plistCreate
	setProperty "colorStops 0 "#5454F2
	setProperty "colorStops 0.5 "#0000D1
	setProperty "colorStops 0.6 "blue
	setProperty "colorStops 0.8 "#ADD8FF
	setProperty "colorStops 0.9 "navy
	setProperty "colorStops 1 "transparent
	back :size * 1.05 - :blueCircleRadius
	setFillGradient createRadialGradient pos pos :blueCircleRadius :colorStops "pad

	circle :blueCircleRadius
	setHeading :oldHeading
	setPos :oldPos
end


to ringOfWhiteCircles :largeRadius :circleRadius
	localmake "oldPos pos
	localmake "oldHeading heading
	localmake "oldPenSize penSize
	localmake "numCircles 47
	setPenSize 0
	setFillColor "white
	right 180 / :numCircles
	repeat :numCircles [
		setPos :oldPos
		forward :largeRadius
		circle :circleRadius
		right 360 / :numCircles
	]
	setHeading :oldHeading
	setPos :oldPos
	setPenSize :oldPenSize
end

to feather1 :size
	localmake "oldPos pos
	penDown
	forward :size * 0.65
	blueCircleShape1 :size * 0.09
	penUp
	setPos :oldPos
end

to feather2 :size
	localmake "oldPos pos
	localmake "oldHeading heading
	localmake "swirlOffset1 :size * 0.11
	localmake "swirlSize1 :size * 0.2
	localmake "swirlSize2 :size * 0.072
	localmake "swirlOffset2 :size * 0.02
	localmake "swirlAngle1 70
	localmake "swirlAngle2 5
	penDown
	forward :size * 0.75
	blueCircleShape2 :size * 0.07
	setFillColor "#1CCA79
	forward :size * 0.022
	jumpLeft :swirlOffset1
	left :swirlAngle1
	swirlRight1 :swirlSize1
	right :swirlAngle1
	jumpRight :swirlOffset1 * 2
	right :swirlAngle1
	swirlLeft1 :swirlSize1
	left :swirlAngle1
	jumpLeft :swirlOffset1 - :swirlOffset2
	forward :size * 0.21
	right :swirlAngle2
	swirlRight2 :swirlSize2
	left :swirlAngle2
	jumpLeft :swirlOffset2 * 2
	left :swirlAngle2
	swirlLeft2 :swirlSize2
	penUp
	setPos :oldPos
	setHeading :oldHeading
end


to softBackgroundGradient :size
	localmake "colorStops plistCreate
	setProperty "colorStops 0.28 "transparent
	setProperty "colorStops 0.333 "#60009400
	setProperty "colorStops 0.345 "#b0009400
	setProperty "colorStops 0.6 "#60009400
	setProperty "colorStops 1 "transparent
	setFillGradient createRadialGradient pos pos :size :colorStops "pad
	setPenSize 0
	circle :size
end

to feathers :size
	localmake "innerCircleRadius :size * 0.333
	localmake "innerCircleRadius2 :size * 0.36
	localmake "whiteCircleDistance :size * 0.405
	localmake "whiteCircleRadius :size * 0.023
	localmake "numFeathers 8
	localmake "angle 180 / :numFeathers
	softBackgroundGradient :size


	setPenSize :size * 0.002
	repeat :numFeathers [
		feather1 :size
		right :angle
		feather2 :size
		right :angle
	]

	ringOfWhiteCircles :whiteCircleDistance :whiteCircleRadius
	setFillColor "transparent
	setPenSize :size * 0.002
	circle :innerCircleRadius2
	setPenSize :size * 0.005
	circle :innerCircleRadius
end

penUp
setXY -1 -100
